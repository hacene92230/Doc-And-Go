{% extends 'base.html.twig' %}

{% block title %}Accédé à mon compte {{ parent() }} {% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">CONNEXION.</h1>


<div class="flex items-center mb-6">
<div class="w-1/3">
    <label for="inputEmail">Votre adresse email</label>
 </div>
<div class="w-2/3">
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-gray-50 border border-gray-400 rounded-lg " autocomplete="email" required autofocus>
</div>
  </div> 
   
<div class="flex items-center mb-6">
    <div class="w-1/3">
<label for="inputPassword">Mot de passe</label>
   </div>  <input type="password" name="password" id="inputPassword" class="form-control class="form-control bg-gray-50 border border-gray-400 rounded-lg" autocomplete="current-password" required>
</div>
  </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}" >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Se souvenir de moi
        </label>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>
</form>
<a href="{{ path("app_forgot_password_request") }}">J'ai oublier mon mot de passe.</a>
{% endblock %}
