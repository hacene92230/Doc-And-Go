  <div id="calendar"></div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        locale: 'fr',
        initialView: 'dayGridMonth',
        selectable: true, // Permettre la sélection de dates
        dayMaxEvents: true, // Afficher les événements dans les cases du calendrier
        select: function(info) {
          // Cette fonction est appelée lorsqu'une date est sélectionnée
          var start = info.start;
          var end = info.end;
          var title = prompt('Nom de l\'événement :');
          if (title) {
            calendar.addEvent({
              title: title,
              start: start,
              end: end
            });
          }
        }
      });
      calendar.render();
    });
  </script>
