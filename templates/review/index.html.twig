<div class="container mx-auto px-4 py-8">
    {% if reviews is not empty %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for review in reviews %}
                <div class="p-6 bg-white shadow-lg rounded-lg">
                    <h3 class="text-lg font-medium text-gray-800 mb-2">{{ review.user.firstName }} ({{ review.reason }})</h3>
                    <div class="flex items-center mb-4">
                        <svg class="h-6 w-6 text-gray-600 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 3a1 1 0 00-1 1v6.37L5.28 8.76a1 1 0 10-1.4 1.48l4.5 3.75a1 1 0 001.24 0l4.5-3.75a1 1 0 10-1.4-1.48L11 10.37V4a1 1 0 00-1-1z" clip-rule="evenodd" />
                            <path fill-rule="evenodd" d="M4 13a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm font-medium text-gray-600">{{ review.notation }}/5</span>
                    </div>
                    <p class="text-gray-700 leading-relaxed">{{ review.comment }}</p>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center text-gray-500 mt-4">Aucun avis n'a été donner, soyez le premier!</p>
    {% endif %}
</div>
