{% extends 'base.html.twig' %}

{% block title %}Mes plannings{{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Liste des plannings :</h2>
                {% if planings is not empty %}
                    <ul class="list-group">
                        {% for planing in planings %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Du {{ planing.startDate|date('d/m/Y') }}</strong> au <strong>{{ planing.endDate|date('d/m/Y') }}</strong>
                                </div>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_planing_show', {'id': planing.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                    <a href="{{ path('app_planing_edit', {'id': planing.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                                    {{ include('planing/_delete_form.html.twig', {'id': planing.id}) }}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Aucun planning trouv√©.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
